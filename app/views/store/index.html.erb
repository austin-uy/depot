<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1><%= t('.title_html') %></h1>

<ul class="catalog">
  <% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <%= render product %>
    <% end %>
  <% end %>
<% end %>
</ul>


<%= link_to "Prev", prev_page_url, :remote => true %>
<%= "Page #{$current_page} of #{Product.page(1).per(3).total_pages}" %>
<%= link_to "Next", next_page_url, :remote => true %>

